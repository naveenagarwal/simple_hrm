<%= form_for([:organization, @organization_structure], html: { remote: true }) do |f| %>

  <%= render partial: "/shared/form_errors", locals: { obj: @organization_structure, name: "organization structure" } %>

  <% if @organization_structure.new_record? %>

    <%= f.hidden_field :node_id, value: params[:node_id] %>
    <%= f.hidden_field :parent_id, value: params[:parent_id] %>

  <% end %>

  <fieldset>
    <%= f.label :unit_id %><br>
    <%= f.text_field :unit_id %>
  </fieldset>
  <fieldset>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </fieldset>
  <fieldset>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </fieldset>

  <fieldset>
    <div class="actions modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <%= f.submit nil, class: "btn btn-primary" %>
    </div>
  </fieldset>

<% end %>
