<h1>Listing Work Weeks</h1>

<%= render partial: '/shared/paginate_collection', locals: { records: @work_weeks } %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Country</th>
      <th>Work week</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @work_weeks.each do |work_week| %>
      <tr>
        <td>
          <%= work_week.country %>
        </td>
        <td>
          <%= format_weekday_info work_week.weekdays_info %>
        </td>
        <td>
          <%= link_to edit_icon, edit_configuration_work_week_path(work_week, pagination_params) %>
        </td>
        <td>
          <%= link_to delete_icon, configuration_work_week_path(work_week, pagination_params), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Work week', new_configuration_work_week_path, class: "btn" %>