<%= form_for(@news, url: url || manage_news_index_path ) do |f| %>

  <%= render partial: "/shared/form_errors", locals: { obj: @news, name: "news" } %>

  <fieldset>
    <%= f.label :topic %>
    <%= f.text_field :topic %>
  </fieldset>

  <fieldset>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </fieldset>

  <fieldset>
    <%= f.label :published_at, "Publish Date" %>
    <%= f.text_field :published_at, value: get_date_in_format(@news.published_at, "%m/%d/%Y"), class: "date" %>
  </fieldset>

  <%= render partial: "/shared/publishes/form", locals: { publisher: @news } %>

  <br>

  <fieldset>
    <div class="actions">
      <%= f.submit nil, class: "btn btn-primary" %>
    </div>
  </fieldset>

<% end %>