<h1>Listing Job Categories</h1>

<%= render partial: '/shared/paginate_collection', locals: { records: @job_categories } %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Category Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @job_categories.each do |job_category| %>
      <tr>
        <td>
          <%= job_category.name %>
        </td>
        <td>
          <%= link_to edit_icon, edit_job_category_path(job_category, pagination_params) %>
        </td>
        <td>
          <%= link_to delete_icon, job_category_path(job_category, pagination_params), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_job_category_path, class: "btn" %>