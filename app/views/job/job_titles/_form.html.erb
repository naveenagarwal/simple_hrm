<%= form_for([:job, @job_title], multipart: true) do |f| %>

  <%= render partial: "/shared/form_errors", locals: { obj: @job_title, name: "job title" } %>

  <fieldset>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </fieldset>
  <fieldset>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </fieldset>
  <fieldset>
    <%= f.label :specification, specification_file_name(@job_title)  %><br>
    <%= f.file_field :specification %>
  </fieldset>
  <fieldset>
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </fieldset>

  <fieldset>
    <div class="actions">
      <%= f.submit nil, class: "btn btn-primary" %>
    </div>
  </fieldset>

<% end %>
